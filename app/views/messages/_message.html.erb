<% if message.user.id == current_user.id %>
<div class="message1">
  <div class="message1__left">
    <div class="time">
      <%= message.updated_at.strftime("%Y-%m-%d %H:%M") %>
    </div>
  </div>
  <div class="message1__right">
    <div class="Speech-bubble">
      <% if message.content.present? %>
      <div class="mycomment">
        <p><%= simple_format message.content %></p>
      </div>
      <% end %>
      <%= image_tag message.image.url, class: 'Message__image' if message.image.present? %>
    </div>
  </div>
</div>
<% else %>
<div class="message ">
  <div class="message__left">
    <%= attachment_image_tag message.user, :profile_image, fallback: "no-image.png", class:"imgsize2"%>
  </div>
  <div class="message__right">
    <div class="message__right__username">
      <%= message.user.username %>
    </div>
    <div class="message__right__date">
      <div class="Speech-bubble">
        <% if message.content.present? %>
        <div class="says">
          <p><%= simple_format message.content %></p>
        </div>
        <% end %>
        <%= image_tag message.image.url, class: 'Message__image' if message.image.present? %>
      </div>
      <div class="time">
        <%= message.updated_at.strftime("%Y-%m-%d %H:%M") %>
      </div>
    </div>
  </div>
</div>
<% end %>