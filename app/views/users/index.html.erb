<div class="section">
  <h1>Users#index</h1>
  <p>Find me in app/views/users/index.html.erb</p>
  <main class="align-center ">
    <div class="profile">
      <% @users.each do |user| %>


      <div class="users">

        <div class="users__link">
          <%= link_to user_path(user) do %>
          <div class="username">
            <%= user.username %>
          </div>
          <div class="userimage">
            <%= attachment_image_tag user, :profile_image, fallback: "no-image.png", class:"imgsize" %>
          </div>
          <% end %>
        </div>

        <div class="users__post-num">投稿数：<%= user.posts.count %></div>



        <div class="users__tags">
          <% user.tag_list.each do |tag| %>
          <%= link_to users_path(tag_name: tag),class: "tag" do %>
          <span style="background-color: #e9e9e9; border-radius: 5px;"><%= tag %></span>
          <% end %>
          <% end %>
        </div>

      </div>
      <% end %>
    </div>
</div>
</main>
</div>
</div>
</div>