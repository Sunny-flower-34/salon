<% if user_signed_in? %>
<div class="section2">
  <main class="user-index">
    <% @users.each do |user| %>
    <%= link_to user_path(user) do %>
    <div class=" user-card card-two users">
      <div class="user-header">
        <div class="avatar">
          <%= attachment_image_tag user, :profile_image, fallback: "no-image.png", class:"imgsize2" %>
        </div>
      </div>
      <h3 class="username"><%= user.username %></h3>
      <div class="contacts">
        <a href=""><i class="fa fa-plus"></i></a>

        <%= link_to rooms_path(user), class: "menu__list__ja" do%>
        <i class="fa fa-whatsapp"></i><% end %>

        <a href=""><i class="fa fa-envelope"></i></a>
        <div class="clear"></div>
      </div>
      <div class="user-p">
        <%= user.profile %>
      </div>
      <div class="user-footer">
        <div class="users__tags">
          <% user.tag_list.each do |tag| %>
          <%= link_to users_path(tag_name: tag),class: "tag" do %>
          <span style="background-color: #e9e9e9; border-radius: 5px;"><%= tag %></span>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
  </main>
</div>
<% else %>
<main>
  <div class="top">
    <div class="ic-g-6 ic-center t-center">
      <h1>
        <span class="f-o-t">Be the</span>
        <span class="ic-accent">Woman</span>
        <span class="outline">You want to be</span>
      </h1>
    </div>
    <figure class="clip-group">
      <div class="parallax">
        <div class="circle">
          <div class="image"></div>
        </div>
      </div>
      <div class="parallax2">
        <div class="circle2">
          <div class="image2"></div>
        </div>
      </div>
    </figure>
  </div>
</main>
<section class="section">
  <div class="guest">
    <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post %>
  </div>
</section>
<% end %>