<% if user_signed_in? %>
<p>ログインしてる時</p>

<div class="section2">
  <main class="user-index">
    <% @users.each do |user| %>
    <div class="users">
      <div class="users__link">
        <%= link_to user_path(user) do %>
        <div class="userimage">
          <%= attachment_image_tag user, :profile_image, fallback: "no-image.png", class:"imgsize" %>
        </div>
        <div class="username">
          <%= user.username %>
          <span class="user-post-num">投稿数：<%= user.posts.count %></span>
        </div>
        <% end %>
      </div>
      <div class="users__tags">
        <% user.tag_list.each do |tag| %>
        <%= link_to users_path(tag_name: tag),class: "tag" do %>
        <span style="background-color: #e9e9e9; border-radius: 5px;"><%= tag %></span>
        <% end %>
        <% end %>
      </div>

    </div>
    <% end %>
  </main>
</div>

<% else %>
<p>ログインしてない時</p>
<section class="section">
  <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post %>
</section>
<% end %>