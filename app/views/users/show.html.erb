<div class="usersection">
  <div class="profile">
    <div class="profile__image">
      <%= attachment_image_tag @user, :profile_image, fallback: "no-image.png", class:"imgsize3"%>
    </div>
    <div class="profile__list">
      <div class="data">
        <div class="data__name">
          <%= @user.username %>
        </div>
        <% if @user.id == current_user.id %>
        <div class="data__icon">
          <%= link_to edit_user_path(@user) do %>
          <i class="fa fa-cog"></i>
          <% end %>
          <%= link_to user_path(@user), method: :delete, data: {confirm: "消していいの？"} do %>
          <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
        <% else %>
        <p class="icon">
          <i class="fas fa-envelope"></i>
          <i class="fab fa-githubn"></i>
        </p>
        <% end %>
      </div>
      <div class="data2">
        <div class="data2__prof">
          <%= simple_format @user.profile %>
        </div>
        <div class="data2__tags">
          <% @user.tag_list.each do |tag| %>
          <%= link_to users_path(tag_name: tag),class: "tag" do %>
          <span style="background-color: #e9e9e9; border-radius: 5px;"><%= tag %></span>
          <% end %>
          <% end %>
        </div>
        <div class="data2__links">
          <p class="icon2">
            <i class="fab fa-facebook-square"></i>
            <i class="fab fa-twitter"></i>
            <i class="fab fa-instagram"></i>
          </p>
        </div>
      </div>
    </div>
  </div>
  </main>

</div>
<div class="Separating-line"> </div>
<div class="section2">
  <div class="post-cards">
    <% @user.posts.each do |post| %>
    <div class="post-card">
      <%= link_to post_path(post) do %>
      <div class="post-card__image">
        <%= attachment_image_tag post, :image, class:"imgsize3" %>
      </div>
      <% end %>
      <div class="post-card__i">
        <div class="co">
          <%= post.updated_at.strftime("%Y-%m-%d %H:%M") %>
        </div>
        <% if @user.id == current_user.id %>
        <%= link_to edit_post_path(post) do %>
        <i class="fa fa-cog co"></i>
        <% end %>
        <%= link_to post_path(post), method: :delete, data: {confirm: "消していいの？"} do %>
        <i class="fas fa-trash-alt co"></i>
        <% end %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>