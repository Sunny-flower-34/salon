<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>
<% if @user.errors.any? %>
  <div>
    <h2><%= pluralize(@user.errors.count, "error") %> があります</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user, local: true do |f| %>

  <%= f.label :username, "ユーザー名前", class: "lable" %>
  <%= f.text_field :username %>

  <%= f.label :email, "メール", class: "lable" %>
  <%= f.text_field :email %>

  <%= f.label :profile, "プロフ", class: "lable" %>
  <%= f.text_area :profile %>

  <%= f.label :profile_image, "画像", class: "lable" %>
  <%= f.attachment_field :profile_image %>
  
  <%= f.submit "更新する", class: "button submit" %>

  <%= f.label :tag_list, 'タグをカンマ区切りで入力' %>
  <%= f.text_field :tag_list, value: @user.tag_list.join(' ') %>
          
  <% @user.tag_list.each do |tag| %>
    <span style="background-color: #e9e9e9; border-radius: 5px;"><%= tag %></span>
  <% end %>
<% end %>