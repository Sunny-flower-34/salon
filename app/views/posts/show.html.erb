<h1>Posts#show</h1>
<p>Find me in app/views/posts/show.html.erb</p>
<section class="section">

  <h1 class="title">
    詳細
  </h1>
  </div>


  <article class="align-center">

    <div class="post">

      <div class="post__image">
        <%= attachment_image_tag @post, :image %>
      </div>

      <div class="post__content">
        <div class="post-t">
          <%= @post.title %>
        </div>
        <div class="post-b">
          <%= simple_format @post.body %>
        </div>
        <% if @post.user.id == current_user.id %>
        <%= link_to "編集画面へ", edit_post_path(@post), class: "button is-success" %>
        <% end %>

        By <%= @post.user.username %>

        <div class="panel-block">
          <p class="control"><%= @post.user.profile %></p>
        </div>
        <%= link_to user_path(@post.user), class: "panel-block" do %>
        <span class="icon">
          <i class="fas fa-user" aria-hidden="true"></i>
        </span>
        <%= @post.user.username %> さんのページへ
        <% end %>
      </div>
    </div>
    </div>
  </article>
  </div>
  </div>
  </article>
  </div>
</section>