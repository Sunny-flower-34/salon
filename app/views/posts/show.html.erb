<section class="section">
  <h3 class="title">投稿詳細</h3>
  <div class="post">
    <div class="post__image">
      <%= attachment_image_tag @post, :image, class: "post-imgsize" %>
    </div>
    <div class="post__content">
      <div class="post-t">
        <%= @post.title %>
      </div>
      <div class="post-b">
        <%= simple_format @post.body %>
      </div>
      <% if @post.user.id == current_user.id %>
      <%= link_to edit_post_path(@post), class: "button is-success" do %>
      <i class="fa fa-cog">編集</i>
      <% end %>
      <% end %>

      By <%= @post.user.username %>

      <%
=begin%>
      <div class="panel-block">
        <p class="control"><%= @post.user.profile %></p>
      </div>
      <%
=end%>
      <%= link_to user_path(@post.user), class: "panel-block" do %>
      <span class="icon">
        <i class="fas fa-user" aria-hidden="true"></i>
      </span>

      <%= @post.user.username %> のページへ
      <% end %>



      <div class="card__Contributor__imag">
        <%= attachment_image_tag @post.user, :profile_image, fallback: "no-image.png", class: "userimage" %>
      </div>
      <div>
        <div>
          <%= form_with(model:[@post, @comment], method: :post) do |f| %>
          <%= f.text_area :comment_content %>
          <%= f.hidden_field :post_id, value: @post.id%>
          <%= f.submit 'コメントする' %>
          <% end %>
        </div>
        <div>
          <% @comments.each do |comment| %>
          <%= comment.comment_content %> #コメントの内容が表示される
          <% end %>
        </div>
        <%= link_to 'ホーム', root_path %>
      </div>

    </div>
  </div>
  </div>
  </article>
  </div>
</section>